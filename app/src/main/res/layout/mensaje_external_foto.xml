<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:alpha="0.91"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    tools:context="com.fernapps.nautaim.MainActivity"
    android:id="@+id/layoutHolderMensajeExternal">

    <TextView
        android:text="martes 4 de abir 12:30PM"
        android:layout_width="wrap_content"
        android:background="@drawable/mensaje_date"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtMsgDate" />

    <ImageView
        android:text="Este seria el texto que nos enviaronnnnnnn o envieeeeeeeeeee"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:background="@drawable/mensaje_external_foto"
        android:elevation="0dp"
        android:id="@+id/txtMsg"
        android:maxHeight="160dp"
        android:maxWidth="160dp"
        android:scaleType="centerInside"
        android:src="@drawable/error_circle"
        android:layout_below="@+id/txtMsgDate"
        android:layout_toRightOf="@+id/containerLetraInicial"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:padding="8dp"
        android:textColor="#fff"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:background="@drawable/text_round_drawable"
        android:maxHeight="30dp"
        android:orientation="vertical"
        android:maxWidth="30dp"
        android:gravity="center"
        android:id="@+id/containerLetraInicial"
        android:layout_alignBottom="@+id/txtMsg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="F"
            android:maxHeight="28dp"
            android:maxWidth="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtLetraInicial"
            android:textStyle="normal|bold"
            android:textColor="#fff"
            android:textSize="14sp"
            />

    </LinearLayout>

</RelativeLayout>